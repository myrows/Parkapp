<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recylcerview.aparcamiento.DetalleAparcamientoActivity">

    <ImageView
        android:id="@+id/ImagenDetalleAparcamiento"
        android:layout_width="218dp"
        android:layout_height="207dp"
        android:layout_marginTop="28dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_parkapp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="218dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ImagenDetalleAparcamiento"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ImagenDetalleAparcamiento"
        app:layout_constraintTop_toBottomOf="@+id/ImagenDetalleAparcamiento"
        app:layout_constraintVertical_bias="0.131">

        <TextView
            android:id="@+id/NombreAparcamientoDetalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TextView" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="218dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/cardView3"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <TextView
            android:id="@+id/DimensionAparcamientoDetalle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="TextView" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ZonaAparcamientoDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="@+id/ImagenDetalleAparcamiento"
        app:layout_constraintTop_toBottomOf="@+id/ImagenDetalleAparcamiento" />

    <Button
        android:id="@+id/ButtonOcupar"
        android:layout_width="408dp"
        android:layout_height="64dp"
        android:layout_marginBottom="132dp"
        android:background="@color/colorPrimaryDark"
        android:text="OCUPAR"
        android:textColor="@color/cardview_light_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView4"
        app:layout_constraintVertical_bias="0.766" />

</androidx.constraintlayout.widget.ConstraintLayout>